        "sentenceLengthLimit"
    ],
    "requiresPrevious": {
        "operator": "*",
        "scopes": "*",
        "message": "The previous step must provide extracted data (e.g., an extract operator)."
    },
    "fields": {},
    "additionalProperties": false,
    "unevaluatedProperties": false,
    "produces": {
        "target": "length",
        "scopes": [
            "document",
            "paragraph",
            "line",
            "endoffile"
        ],
        "contextWrites": [
            "ctx.lengths",
            "ctx.counts",
            "ctx.count",
            "ctx.previous",
            "ctx.diagnostics"
        ]
    },
    "examples": [
